// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+alt+p",
        "command": "asciidoc.exportAsPDF",
        "when": "editorLangId == 'asciidoc'"
    },
    {
        "key": "ctrl+k",
        "command": "-vscode-neovim.send",
        "when": "editorTextFocus && neovim.ctrlKeysNormal && neovim.init && neovim.mode != 'insert'"
    },
    {
        "key": "ctrl+k v",
        "command": "asciidoc.showPreviewToSide",
        "when": "!notebookEditorFocused && editorLangId == 'asciidoc'"
    },
    {
        "key": "ctrl+k ctrl+h",
        "command": "-workbench.action.output.toggleOutput"
    },
    {
        "key": "ctrl+k ctrl+h",
        "command": "workbench.action.output.toggleOutput"
    },
    {
        "key": "ctrl+shift+t",
        "command": "-workbench.action.reopenClosedEditor"
    },
    {
        "key": "ctrl+shift+t",
        "command": "workbench.action.reopenClosedEditor"
    },
    {
        "key": "ctrl+alt+n",
        "command": "python.execInTerminal",
        "when": "textInputFocus && editorLangId == 'python'"
    },
    {
        "key": "ctrl+shift+o",
        "command": "workbench.view.extension.bito-activitybar"
    },
    {
        "key": "alt+p",
        "command": "-seito-openfile.openFileFromText",
        "when": "editorTextFocus && neovim.ctrlKeysNormal && neovim.init && neovim.mode != 'insert'"
    },
    {
        "key": "ctrl+shift+m",
        "command": "codeium.openSearchView"
    },
    {
        "key": "ctrl+shift+t",
        "command": "workbench.action.toggleActivityBarVisibility"
    },
    {
        "key": "g g",
        "command": "-list.focusFirst",
        "when": "editorTextFocus && neovim.ctrlKeysNormal && neovim.init && neovim.mode != 'insert'"
    },
]